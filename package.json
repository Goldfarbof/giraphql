{
  "name": "@hayes/schema-builder",
  "version": "0.1.0",
  "main": "lib/index.js",
  "author": "Michael Hayes",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prepare": "nimbus create-config --silent",
    "build": "nimbus typescript",
    "lint": "nimbus eslint",
    "posttest": "yarn run lint",
    "jest": "NODE_ENV=test TZ=UTC nimbus jest",
    "jest:coverage": "yarn run jest -- --coverage",
    "test": "yarn run jest:coverage",
    "prepack": "yarn build",
    "prettier": "nimbus prettier",
    "type": "nimbus typescript --noEmit",
    "pretest": "yarn run type"
  },
  "devDependencies": {
    "@airbnb/config-babel": "^2.1.0",
    "@airbnb/config-eslint": "^2.2.0",
    "@airbnb/config-jest": "^2.1.0",
    "@airbnb/config-prettier": "^2.0.0",
    "@airbnb/config-typescript": "^2.1.0",
    "@airbnb/nimbus": "^2.0.1",
    "@babel/plugin-syntax-bigint": "^7.4.4",
    "@types/jest": "^24.0.18",
    "apollo-server": "^2.9.7",
    "graphql-tag": "^2.10.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5"
  },
  "nimbus": {
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "testsFolder": "test"
      }
    ],
    "settings": {
      "library": true,
      "next": true,
      "node": true,
      "testFolder": "test"
    },
    "env": {
      "useBuiltIns": false,
      "corejs": false,
      "targets": {
        "node": "10"
      },
      "exclude": [
        "proposal-async-generator-functions"
      ]
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "yarn run prettier",
      "git add"
    ],
    "*.md": [
      "yarn run prettier --tab-width 4",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/graphql": "^14.5.0",
    "graphql": "^14.5.8",
    "object.fromentries": "^2.0.1",
    "typescript": "^3.7.2"
  }
}
