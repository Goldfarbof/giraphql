{
  "name": "schema-builder",
  "version": "1.0.0",
  "description": "## Getting started",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "prepare": "nimbus create-config --silent",
    "build": "nimbus type",
    "lint": "nimbus eslint",
    "posttest": "yarn run lint",
    "jest": "NODE_ENV=test TZ=UTC nimbus jest",
    "jest:coverage": "yarn run jest -- --coverage",
    "test": "yarn run jest:coverage",
    "prettier": "nimbus prettier",
    "type": "nimbus typescript --build --reference-workspaces",
    "pretest": "yarn run type"
  },
  "workspaces": [
    "./packages/*"
  ],
  "private": true,
  "dependencies": {
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@airbnb/config-babel": "^2.1.0",
    "@airbnb/config-eslint": "^2.2.0",
    "@airbnb/config-jest": "^2.1.0",
    "@airbnb/config-prettier": "^2.0.1",
    "@airbnb/config-typescript": "^2.1.0",
    "@airbnb/nimbus": "^2.0.4",
    "@babel/plugin-syntax-bigint": "^7.4.4",
    "@types/jest": "^24.0.18",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "yarn run prettier",
      "git add"
    ],
    "*.md": [
      "yarn run prettier --tab-width 4",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hayes/schema-builder.git"
  },
  "author": "Michael Hayes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hayes/schema-builder/issues"
  },
  "homepage": "https://github.com/hayes/schema-builder#readme",
  "nimbus": {
    "drivers": [
      "eslint",
      "jest",
      "prettier",
      "typescript",
      "babel"
    ],
    "settings": {
      "library": true,
      "next": true,
      "node": true
    }
  }
}
