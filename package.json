{
  "name": "@giraphql/schema-builder-root",
  "version": "0.0.0",
  "description": "A strongly typed code first schema builder for GraphQL",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo typescript --build --reference-workspaces",
    "clean": "rm -rf ./packages/*/{tsconfig.tsbuildinfo,lib}",
    "ci": "yarn run type && yarn run test && yarn run lint",
    "coverage": "yarn run test --coverage",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "test": "beemo jest",
    "type": "beemo typescript --build --reference-workspaces",
    "prerelease": "yarn run ci && yarn run build",
    "release": "lerna version --conventional-commits --changelog-graduate conventional-changelog-beemo --create-release github --push && lerna publish from-github",
    "preview": "yarn prerelease && lerna version --conventional-commits --conventional-prerelease --changelog-preset conventional-changelog-beemo --push"
  },
  "workspaces": [
    "./packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@babel/plugin-syntax-bigint": "^7.8.3",
    "@beemo/driver-typescript": "^1.4.1",
    "@milesj/build-tools": "^2.15.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/node-fetch": "^2.5.7",
    "conventional-changelog-beemo": "^2.0.0",
    "graphql": "^15.4.0",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "yarn run prettier"
    ],
    "*.md": [
      "yarn run prettier --tab-width 4"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hayes/giraphql.git"
  },
  "author": "Michael Hayes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hayes/giraphql/issues"
  },
  "homepage": "https://github.com/hayes/giraphql#readme",
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "useBuiltIns": false,
      "node": true
    }
  }
}
